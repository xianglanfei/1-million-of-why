{
  "name": "1-million-of-why",
  "version": "1.0.0",
  "description": "Mobile Q&A app that transforms boredom into curiosity",
  "main": "src/app.ts",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "build": "echo 'No build needed for Vercel'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:api": "jest --testPathPattern=api",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "validate": "npm run lint && npm run format:check && npm run test"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "joi": "^17.11.0",
    "firebase-admin": "^11.11.1",
    "firebase-functions": "^4.5.0",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/morgan": "^1.9.7",
    "@types/jest": "^29.5.6",
    "@vercel/node": "^3.0.0",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.51.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mobile-app",
    "ai",
    "questions",
    "learning",
    "curiosity",
    "react-native",
    "hackathon"
  ],
  "author": "1 Million of Why Team",
  "license": "MIT"
}
